# Dockerfile.langchain
# Builds the LangGraph Currency Agent, setting WORKDIR correctly for uv workspace.

FROM python:3.13-slim

ENV PYTHONUNBUFFERED=1 \
    PORT=8080 \
    # Define repo root for clarity
    REPO_ROOT=/a2a_repo \
    UV_CACHE_DIR=/root/.cache/uv \
    PATH="/root/.local/bin:${PATH}"

RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

# Clone the full A2A repository into REPO_ROOT
RUN git clone --depth 1 https://github.com/google/A2A.git ${REPO_ROOT}

# Set the working directory *inside* the specific agent's folder within the clone
WORKDIR ${REPO_ROOT}/samples/python/agents/langgraph

# Install Python dependencies using uv from the current WORKDIR's pyproject.toml
# uv should now be able to resolve workspace dependencies correctly
RUN uv pip install --system .

EXPOSE ${PORT}

# Run the application using uv from the current WORKDIR
# Assumes 'uv run .' finds the correct entrypoint in this directory's pyproject.toml
CMD ["uv", "run", ".", "--host", "0.0.0.0", "--port", "${PORT}"]
