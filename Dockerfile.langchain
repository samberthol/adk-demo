# Dockerfile.langchain
# Builds the LangGraph Currency Agent, fixing PATH for uv.

FROM python:3.13-slim

ENV PYTHONUNBUFFERED=1 \
    PORT=8080 \
    WORKDIR=/app \
    UV_CACHE_DIR=/root/.cache/uv \
    # Add the likely uv installation directory to the PATH
    PATH="/root/.local/bin:${PATH}"

RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    curl \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

# Install uv
RUN curl -LsSf https://astral.sh/uv/install.sh | sh

WORKDIR ${WORKDIR}

# Clone the specific agent directory
RUN git clone --depth 1 --filter=blob:none --sparse https://github.com/google/A2A.git /tmp/A2A \
    && cd /tmp/A2A \
    && git sparse-checkout set samples/python/agents/langgraph \
    && mv samples/python/agents/langgraph/* ${WORKDIR} \
    && cd / \
    && rm -rf /tmp/A2A

# Install Python dependencies using uv (should find uv in PATH now)
RUN uv pip install --system .

EXPOSE ${PORT}

# Run the application using uv
CMD ["uv", "run", ".", "--host", "0.0.0.0", "--port", "${PORT}"]
